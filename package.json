{
  "name": "codepin",
  "displayName": "Codepin",
  "description": "Pin code and notes for faster dev workflows",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:codepin.addPin",
    "onCommand:codepin.addPinFolder",
    "onCommand:codepin.openPin",
    "onCommand:codepin.delete",
    "onCommand:codepin.rename",
    "onCommand:codepin.changeColor",
    "onView:codepinView"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Codepin",
      "properties": {
        "codepin.showFullPath": {
          "type": "boolean",
          "default": false,
          "description": "Show the full file path in pin labels"
        },
        "codepin.openPinOnClick": {
        "type": "boolean",
        "default": true,
        "description": "Open pinned file when clicking the pin in the sidebar. Disable to only open with right-click menu."
        },
        "codepin.showTagColors": {
        "type": "boolean",
        "default": true,
        "description": "Show colored icons for tags in the sidebar"
        }
      }
    },
    "submenus": [
      {
        "id": "codepin.changeColorSubmenu",
        "label": "Change Color"
      },
      { 
        "id": "codepin.changeColorSubmenu", 
        "label": "Change Color" 
      }
    ],
    "keybindings": [
      {
        "command": "codepin.addPin",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "codepinView",
          "name": "Codepins"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "codepin.addPin",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "submenu": "codepin.changeColorSubmenu",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)",
          "group": "navigation@5"
        },
        {
          "command": "codepin.openPin",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote)",
          "group": "navigation@1"
        },
        {
          "command": "codepin.rename",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)",
          "group": "navigation@3"
        },
        {
          "command": "codepin.delete",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)",
          "group": "navigation@6"
        },
        {
          "command": "codepin.addNote",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinFolder)",
          "group": "navigation@2"
        },
        {
          "command": "codepin.editNote",
          "when": "view == codepinView && (viewItem == pinItemWithNote || viewItem == pinFolderWithNote)",
          "group": "navigation@2"
        },
        {
          "command": "codepin.removeNote",
          "when": "view == codepinView && (viewItem == pinItemWithNote || viewItem == pinFolderWithNote)",
          "group": "navigation@3"
        },
        {
          "command": "codepin.assignTag",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)",
          "group": "navigation@4"
        }
      ],
      "view/title": [
        {
          "command": "codepin.addPinFolder",
          "when": "view == codepinView",
          "group": "navigation@2"
        },
        {
          "command": "codepin.tagManager",
          "when": "view == codepinView",
          "group": "navigation@1"
        },
        {
          "command": "codepin.search",
          "when": "view == codepinView",
          "group": "navigation@0"
        }
      ],
      "codepin.changeColorSubmenu": [
        {
          "command": "codepin.setColorBlue",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)"
        },
        {
          "command": "codepin.setColorGreen",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)"
        },
        {
          "command": "codepin.setColorPurple",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)"
        },
        {
          "command": "codepin.setColorRed",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)"
        },
        {
          "command": "codepin.setColorYellow",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)"
        },
        {
          "command": "codepin.setColorOrange",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)"
        },
        {
          "command": "codepin.setColorBrown",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)"
        },
        {
          "command": "codepin.setColorBlack",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)"
        },
        {
          "command": "codepin.setColorWhite",
          "when": "view == codepinView && (viewItem == pinItem || viewItem == pinItemWithNote || viewItem == pinFolder || viewItem == pinFolderWithNote)"
        }
      ]
    },
    "commands": [
      {
        "command": "codepin.search",
        "title": "Search Pins and Folders",
        "icon": "$(search)"
      },
      {
        "command": "codepin.assignTag",
        "title": "Assign/Remove Tag",
        "icon": "$(tag)"
      },
      {
        "command": "codepin.addPinFolder",
        "title": "New Folder",
        "icon": "$(new-folder)" 
      },
      {
        "command": "codepin.tagManager",
        "title": "Tag Manager",
        "icon": "$(tag)" 
      },
      {
        "command": "codepin.setColorRed",
        "title": "ðŸ”´ Red"
      },
      {
        "command": "codepin.setColorBlue",
        "title": "ðŸ”µ Blue"
      },
      {
        "command": "codepin.setColorGreen",
        "title": "ðŸŸ¢ Green"
      },
      {
        "command": "codepin.setColorYellow",
        "title": "ðŸŸ¡ Yellow"
      },
      {
        "command": "codepin.setColorOrange",
        "title": "ðŸŸ  Orange"
      },
      {
        "command": "codepin.setColorBrown",
        "title": "ðŸŸ¤ Brown"
      },
      {
        "command": "codepin.setColorPurple",
        "title": "ðŸŸ£ Purple"
      },
      {
